---
import { mergeClassNames } from '../utils.ts';
import 'bootstrap-icons/font/bootstrap-icons.css';

export interface Props {
  URL: string;
  icon: string;
  icon_size: string;
}

const { URL, icon, icon_size } = Astro.props;
---

<a
  href={URL}
  target={'_blank'}
  class={ mergeClassNames(
    `inline-block ${icon_size}`,
    'social-link',
    'transition-colors duration-100 ease-out',
    'align-middle',
  )}
>
  <i class={`bi bi-${icon}`}></i>
</a>

<style>
  :global(.social-link) {
    color: var(--text);
  }
  :global(.social-link:hover),
  :global(.social-link:focus-visible) {
    color: var(--link);
  }
</style>

