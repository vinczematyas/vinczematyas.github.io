---
import { mergeClassNames } from '../utils.ts';

type Props = { 
  href: string;
  external?: boolean;
  color?: string;
};

const { href, external, color } = Astro.props;
---

<a
  href={href}
  target={external ? '_blank' : '_self'}
  rel={external ? 'noreferrer' : undefined}
  class="inline-block text-[var(--link)] hover:underline hover:underline-offset-[2px] hover:text-[var(--link-hover)]"
>

  <slot />
</a>

